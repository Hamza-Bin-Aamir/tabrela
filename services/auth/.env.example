# Server Configuration
HOST=0.0.0.0
PORT=8081

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/auth_db
# Test Database (used for running tests with --ignored flag)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/auth_db_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=900  # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRY=604800  # 7 days in seconds

# Password Security
PASSWORD_PEPPER=your-super-secret-pepper-change-this-in-production

# CORS Configuration (comma-separated list of origins)
# For development: http://localhost:3000,http://localhost:5173
# For production: https://yourdomain.com
ALLOWED_ORIGINS=*

# CORS Strict Mode (true for production, false for development)
CORS_STRICT_MODE=false

# CSRF Configuration
CSRF_TOKEN_EXPIRY=3600  # 1 hour in seconds
